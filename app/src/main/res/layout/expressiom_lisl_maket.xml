<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <TextView
        android:id="@+id/pos_in_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:text="1." />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_in_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Формула" />

        <TextView
            android:id="@+id/exp_in_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="cos(20)+sin(30)" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/delButton"
            android:layout_margin="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_delete_black_18dp"
            android:background="@android:color/background_light"/>
        <ImageButton
            android:id="@+id/editButton"
            android:layout_margin="4dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_edit_black_18dp"
            android:background="@android:color/background_light"/>
    </LinearLayout>

</LinearLayout>