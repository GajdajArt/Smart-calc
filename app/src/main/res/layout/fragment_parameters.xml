<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.MainActivity">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout

                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                android:background="@android:color/holo_blue_light"
                android:gravity="right"
                android:orientation="vertical">

                <TextView

                    android:id="@+id/expTitleInPF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfghjkl;" />

                <TextView

                    android:id="@+id/distInPF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="dfghjkl;" />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:background="@android:color/holo_orange_light"
                android:gravity="center"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/resultSP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                </Spinner>

                <Button
                    android:id="@+id/pasteResultButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="paste" />


                <ImageButton
                    android:id="@+id/saveResultButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_save" />


            </LinearLayout>

            <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:grid="http://schemas.android.com/apk/res-auto"

                android:id="@+id/choice_grid"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:padding="4dp"


                grid:alignmentMode="alignBounds"
                grid:columnCount="3"
                grid:rowOrderPreserved="false"
                grid:useDefaultMargins="true">

                <Button
                    android:id="@+id/sevenButton"
                    android:layout_height="wrap_content"
                    android:text="7"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/eytButton"
                    android:layout_height="wrap_content"
                    android:text="8"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/nineButton"
                    android:layout_height="wrap_content"
                    android:text="9"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/fourButton"
                    android:layout_height="wrap_content"
                    android:text="4"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/fiveButton"
                    android:layout_height="wrap_content"
                    android:text="5"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/sixButton"
                    android:layout_height="wrap_content"
                    android:text="6"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/oneButton"
                    android:layout_height="wrap_content"
                    android:text="1"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/twoButton"
                    android:layout_height="wrap_content"
                    android:text="2"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/threeButton"
                    android:layout_height="wrap_content"
                    android:text="3"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/pointButton"
                    android:layout_height="wrap_content"
                    android:text="."
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/zeroButton"
                    android:layout_height="wrap_content"
                    android:text="0"
                    app:layout_columnWeight="1" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_height="wrap_content"
                    android:text="C"
                    app:layout_columnWeight="1" />

            </android.support.v7.widget.GridLayout>

        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/nextVarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:clickable="true"
            android:src="@android:drawable/ic_menu_edit"
            app:backgroundTint="#FF0000"
            app:layout_anchor="@id/viewOne"
            app:layout_anchorGravity="bottom|right|end"
            app:rippleColor="#FFF" />

    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>